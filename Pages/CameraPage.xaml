<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UAUIngleza_plc.Pages.CameraPage"
             Title="CÃ¢mera">

    <ContentPage.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/CameraStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </ContentPage.Resources>

    <!-- Layout principal: Grid com 2 colunas -->
    <Grid ColumnSpacing="0">
        <Grid.ColumnDefinitions>
            <!-- WebView: 80% da tela (4*) -->
            <ColumnDefinition Width="4*" />
            <!-- Menu lateral: 20% da tela (1*) -->
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <!-- WebView da CÃ¢mera (80%) -->
        <Border Grid.Column="0"
                StrokeThickness="0">
            <WebView x:Name="CameraWebView"
                     HorizontalOptions="FillAndExpand"
                     VerticalOptions="FillAndExpand"
                     BackgroundColor="Black" />
        </Border>

        <!-- Menu Lateral (20%) -->
        <Border Grid.Column="1"
                Background="#1a1a1a"
                StrokeThickness="2"
                Stroke="#2a2a2a">
            
            <ScrollView>
                <VerticalStackLayout Spacing="12"
                                     Padding="12"
                                     VerticalOptions="Start">

                    <!-- Status do PLC -->
                    <Border Background="#2a2a2a"
                            Padding="12"
                            StrokeThickness="1"
                            Stroke="#3a3a3a"
                            StrokeShape="RoundRectangle 10">
                        <Grid RowSpacing="8">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <Label Grid.Row="0"
                                   Text="STATUS PLC"
                                   FontSize="10"
                                   FontAttributes="Bold"
                                   TextColor="#888888"
                                   HorizontalOptions="Center" />
                            
                            <!-- Indicador Visual (Bolinha) -->
                            <Border Grid.Row="1"
                                    WidthRequest="24"
                                    HeightRequest="24"
                                    StrokeThickness="2"
                                    Stroke="{Binding IsPlcConnected, Converter={StaticResource BoolToColorConverter}}"
                                    StrokeShape="RoundRectangle 12"
                                    Background="{Binding IsPlcConnected, Converter={StaticResource BoolToColorConverter}}"
                                    HorizontalOptions="Center">
                                <Border.Shadow>
                                    <Shadow Brush="{Binding IsPlcConnected, Converter={StaticResource BoolToColorConverter}}"
                                            Radius="10"
                                            Opacity="0.8" />
                                </Border.Shadow>
                            </Border>

                            <Label Grid.Row="2"
                                   Text="{Binding IsPlcConnected, Converter={StaticResource BoolToStatusTextConverter}}"
                                   FontSize="11"
                                   FontAttributes="Bold"
                                   TextColor="{Binding IsPlcConnected, Converter={StaticResource BoolToColorConverter}}"
                                   HorizontalOptions="Center" />
                        </Grid>
                    </Border>

                    <!-- Separador -->
                    <BoxView HeightRequest="1"
                             Color="#3a3a3a"
                             HorizontalOptions="Fill"
                             Margin="0,8,0,8" />

                    <!-- TÃ­tulo Receitas -->
                    <Label Text="ðŸ“‹ RECEITAS"
                           FontSize="12"
                           FontAttributes="Bold"
                           TextColor="#cccccc"
                           HorizontalOptions="Center"
                           Margin="0,0,0,5" />

                    <!-- BotÃµes de Receitas -->
                    <Button Text="Receita 1"
                            CommandParameter="1"
                            Clicked="OnRecipeClicked"
                            BackgroundColor="{StaticResource Primary}"
                            TextColor="White"
                            FontSize="12"
                            FontAttributes="Bold"
                            HeightRequest="50"
                            CornerRadius="10"
                            Padding="10,0">
                        <Button.Shadow>
                            <Shadow Brush="{StaticResource Primary}"
                                    Radius="8"
                                    Opacity="0.4" />
                        </Button.Shadow>
                    </Button>

                    <Button Text="Receita 2"
                            CommandParameter="2"
                            Clicked="OnRecipeClicked"
                            BackgroundColor="{StaticResource Primary}"
                            TextColor="White"
                            FontSize="12"
                            FontAttributes="Bold"
                            HeightRequest="50"
                            CornerRadius="10"
                            Padding="10,0">
                        <Button.Shadow>
                            <Shadow Brush="{StaticResource Primary}"
                                    Radius="8"
                                    Opacity="0.4" />
                        </Button.Shadow>
                    </Button>

                    <Button Text="Receita 3"
                            CommandParameter="3"
                            Clicked="OnRecipeClicked"
                            BackgroundColor="{StaticResource Primary}"
                            TextColor="White"
                            FontSize="12"
                            FontAttributes="Bold"
                            HeightRequest="50"
                            CornerRadius="10"
                            Padding="10,0">
                        <Button.Shadow>
                            <Shadow Brush="{StaticResource Primary}"
                                    Radius="8"
                                    Opacity="0.4" />
                        </Button.Shadow>
                    </Button>

                    <Button Text="Receita 4"
                            CommandParameter="4"
                            Clicked="OnRecipeClicked"
                            BackgroundColor="{StaticResource Primary}"
                            TextColor="White"
                            FontSize="12"
                            FontAttributes="Bold"
                            HeightRequest="50"
                            CornerRadius="10"
                            Padding="10,0">
                        <Button.Shadow>
                            <Shadow Brush="{StaticResource Primary}"
                                    Radius="8"
                                    Opacity="0.4" />
                        </Button.Shadow>
                    </Button>

                    <Button Text="Receita 5"
                            CommandParameter="5"
                            Clicked="OnRecipeClicked"
                            BackgroundColor="{StaticResource Primary}"
                            TextColor="White"
                            FontSize="12"
                            FontAttributes="Bold"
                            HeightRequest="50"
                            CornerRadius="10"
                            Padding="10,0">
                        <Button.Shadow>
                            <Shadow Brush="{StaticResource Primary}"
                                    Radius="8"
                                    Opacity="0.4" />
                        </Button.Shadow>
                    </Button>

                </VerticalStackLayout>
            </ScrollView>
        </Border>
    </Grid>
</ContentPage>
