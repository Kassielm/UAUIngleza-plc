<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UAUIngleza_plc.MainPage"
             Shell.FlyoutBehavior="Flyout"
             Title="UAU Ingleza">

    <Grid ColumnSpacing="0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0"
                StrokeThickness="0">
            <WebView x:Name="CameraWebView"
                     HorizontalOptions="FillAndExpand"
                     VerticalOptions="FillAndExpand"
                     BackgroundColor="Black" />
        </Border>

        <Border Grid.Column="1"
                Background="#1a1a1a"
                StrokeThickness="2"
                Stroke="#2a2a2a">
            
            <Grid RowSpacing="0" Padding="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Botões de Receitas -->
                <ScrollView Grid.Row="0" VerticalOptions="FillAndExpand">
                    <VerticalStackLayout Spacing="10" VerticalOptions="Center">
                        
                        <Label Text="📋 RECEITAS"
                               FontSize="12"
                               FontAttributes="Bold"
                               TextColor="#cccccc"
                               HorizontalOptions="Center"
                               Margin="0,0,0,10" />

                        <Button Text="Receita 1"
                                Clicked="OnRecipeClicked"
                                CommandParameter="1"
                                IsEnabled="{Binding CanInteract}"
                                BackgroundColor="{StaticResource Primary}"
                                TextColor="White"
                                FontSize="14"
                                FontAttributes="Bold"
                                HeightRequest="60"
                                CornerRadius="10">
                            <Button.Shadow>
                                <Shadow Brush="{StaticResource Primary}"
                                        Radius="8"
                                        Opacity="0.4" />
                            </Button.Shadow>
                        </Button>

                        <Button Text="Receita 2"
                                Clicked="OnRecipeClicked"
                                CommandParameter="2"
                                IsEnabled="{Binding CanInteract}"
                                BackgroundColor="{StaticResource Primary}"
                                TextColor="White"
                                FontSize="14"
                                FontAttributes="Bold"
                                HeightRequest="60"
                                CornerRadius="10">
                            <Button.Shadow>
                                <Shadow Brush="{StaticResource Primary}"
                                        Radius="8"
                                        Opacity="0.4" />
                            </Button.Shadow>
                        </Button>

                        <Button Text="Receita 3"
                                Clicked="OnRecipeClicked"
                                CommandParameter="3"
                                IsEnabled="{Binding CanInteract}"
                                BackgroundColor="{StaticResource Primary}"
                                TextColor="White"
                                FontSize="14"
                                FontAttributes="Bold"
                                HeightRequest="60"
                                CornerRadius="10">
                            <Button.Shadow>
                                <Shadow Brush="{StaticResource Primary}"
                                        Radius="8"
                                        Opacity="0.4" />
                            </Button.Shadow>
                        </Button>

                        <Button Text="Receita 4"
                                Clicked="OnRecipeClicked"
                                CommandParameter="4"
                                IsEnabled="{Binding CanInteract}"
                                BackgroundColor="{StaticResource Primary}"
                                TextColor="White"
                                FontSize="14"
                                FontAttributes="Bold"
                                HeightRequest="60"
                                CornerRadius="10">
                            <Button.Shadow>
                                <Shadow Brush="{StaticResource Primary}"
                                        Radius="8"
                                        Opacity="0.4" />
                            </Button.Shadow>
                        </Button>

                        <Button Text="Receita 5"
                                Clicked="OnRecipeClicked"
                                CommandParameter="5"
                                IsEnabled="{Binding CanInteract}"
                                BackgroundColor="{StaticResource Primary}"
                                TextColor="White"
                                FontSize="14"
                                FontAttributes="Bold"
                                HeightRequest="60"
                                CornerRadius="10">
                            <Button.Shadow>
                                <Shadow Brush="{StaticResource Primary}"
                                        Radius="8"
                                        Opacity="0.4" />
                            </Button.Shadow>
                        </Button>

                    </VerticalStackLayout>
                </ScrollView>

                <VerticalStackLayout Grid.Row="1" 
                                     Spacing="8" 
                                     Margin="0,10,0,0">
                    
                    <BoxView HeightRequest="1"
                             Color="#3a3a3a"
                             HorizontalOptions="Fill"
                             Margin="0,0,0,8" />

                    <Border Background="#2a2a2a"
                            Padding="8"
                            StrokeThickness="1"
                            Stroke="#3a3a3a"
                            StrokeShape="RoundRectangle 8">
                        <Grid ColumnSpacing="8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0"
                                    WidthRequest="16"
                                    HeightRequest="16"
                                    StrokeThickness="2"
                                    Stroke="{Binding IsConnected, Converter={StaticResource BoolToColorConverter}}"
                                    StrokeShape="RoundRectangle 8"
                                    Background="{Binding IsConnected, Converter={StaticResource BoolToColorConverter}}"
                                    VerticalOptions="Center">
                                <Border.Shadow>
                                    <Shadow Brush="{Binding IsConnected, Converter={StaticResource BoolToColorConverter}}"
                                            Radius="8"
                                            Opacity="0.8" />
                                </Border.Shadow>
                            </Border>

                            <Label Grid.Column="1"
                                   Text="{Binding IsConnected, Converter={StaticResource BoolToStatusTextConverter}}"
                                   FontSize="10"
                                   FontAttributes="Bold"
                                   TextColor="{Binding IsConnected, Converter={StaticResource BoolToColorConverter}}"
                                   VerticalOptions="Center" />
                        </Grid>
                    </Border>

                    <Border Background="#2a2a2a"
                            Padding="12"
                            StrokeThickness="1"
                            Stroke="#3a3a3a"
                            StrokeShape="RoundRectangle 8">
                        <VerticalStackLayout Spacing="5">
                            <Label Text="RECEITA ATIVA"
                                   FontSize="9"
                                   FontAttributes="Bold"
                                   TextColor="#888888"
                                   HorizontalOptions="Center" />
                            
                            <Label Text="{Binding RecipeValue}"
                                   FontSize="28"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"
                                   TextColor="{StaticResource Primary}" />
                            
                            <Label Text="{Binding RecipeText}"
                                   FontSize="10"
                                   TextColor="#cccccc"
                                   HorizontalOptions="Center"
                                   LineBreakMode="WordWrap"
                                   HorizontalTextAlignment="Center" />
                        </VerticalStackLayout>
                    </Border>

                </VerticalStackLayout>

            </Grid>
        </Border>
    </Grid>

</ContentPage>
