<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UAUIngleza_plc.MainPage"
             Shell.FlyoutBehavior="Flyout"
             Title="Teste PLC">

    <ScrollView>
        <VerticalStackLayout
            Padding="30"
            Spacing="30">

            <!-- Título -->
            <Label
                Text="🧪 Componente de Teste PLC"
                Style="{StaticResource Headline}"
                HorizontalOptions="Center"
                SemanticProperties.HeadingLevel="Level1" />

            <!-- Status de Conexão -->
            <Border
                Stroke="{Binding IsConnected, Converter={StaticResource BoolToColorConverter}}"
                StrokeThickness="3"
                Background="{Binding IsConnected, Converter={StaticResource BoolToBackgroundConverter}}"
                Padding="20"
                StrokeShape="RoundRectangle 15"
                HorizontalOptions="Fill">
                <VerticalStackLayout Spacing="10">
                    <Label
                        Text="STATUS DA CONEXÃO"
                        FontSize="12"
                        FontAttributes="Bold"
                        HorizontalOptions="Center"
                        TextColor="White" />
                    <Label
                        Text="{Binding ConnectionStatus}"
                        FontSize="24"
                        FontAttributes="Bold"
                        HorizontalOptions="Center"
                        TextColor="White" />
                </VerticalStackLayout>
            </Border>

            <!-- Separador -->
            <BoxView
                HeightRequest="1"
                Color="{StaticResource Gray300}"
                HorizontalOptions="Fill" />

            <!-- Valor do Bit -->
            <VerticalStackLayout Spacing="15">
                <Label
                    Text="VALOR MONITORADO (DB1.DBW0)"
                    FontSize="14"
                    FontAttributes="Bold"
                    HorizontalOptions="Center"
                    TextColor="{StaticResource Primary}" />
                
                <Border
                    Stroke="{StaticResource Primary}"
                    StrokeThickness="2"
                    Background="{StaticResource Gray100}"
                    Padding="30"
                    StrokeShape="RoundRectangle 20"
                    HorizontalOptions="Center"
                    MinimumWidthRequest="200">
                    <Label
                        Text="{Binding BitValue}"
                        FontSize="48"
                        FontAttributes="Bold"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        TextColor="{StaticResource Primary}" />
                </Border>
            </VerticalStackLayout>

            <!-- Separador -->
            <BoxView
                HeightRequest="1"
                Color="{StaticResource Gray300}"
                HorizontalOptions="Fill"
                Margin="0,10,0,10" />

            <!-- Botões de Controle Básico -->
            <VerticalStackLayout Spacing="15">
                <Label
                    Text="CONTROLES BÁSICOS"
                    FontSize="14"
                    FontAttributes="Bold"
                    HorizontalOptions="Center"
                    TextColor="{StaticResource Primary}" />

                <Button
                    Text="⬆️ SETAR BIT (1)"
                    Clicked="OnSetBitClicked"
                    IsEnabled="{Binding CanInteract}"
                    BackgroundColor="#28a745"
                    TextColor="White"
                    FontSize="18"
                    FontAttributes="Bold"
                    HeightRequest="60"
                    CornerRadius="15"
                    HorizontalOptions="Fill" />

                <Button
                    Text="⬇️ RESETAR BIT (0)"
                    Clicked="OnResetBitClicked"
                    IsEnabled="{Binding CanInteract}"
                    BackgroundColor="#dc3545"
                    TextColor="White"
                    FontSize="18"
                    FontAttributes="Bold"
                    HeightRequest="60"
                    CornerRadius="15"
                    HorizontalOptions="Fill" />
            </VerticalStackLayout>

            <!-- Separador -->
            <BoxView
                HeightRequest="2"
                Color="{StaticResource Gray300}"
                HorizontalOptions="Fill"
                Margin="0,10,0,10" />

            <!-- Receitas -->
            <VerticalStackLayout Spacing="15">
                <Label
                    Text="📋 RECEITAS"
                    FontSize="14"
                    FontAttributes="Bold"
                    HorizontalOptions="Center"
                    TextColor="{StaticResource Primary}" />

                <Button
                    Text="Receita 1"
                    Clicked="OnRecipe1Clicked"
                    IsEnabled="{Binding CanInteract}"
                    BackgroundColor="{StaticResource Primary}"
                    TextColor="White"
                    FontSize="16"
                    FontAttributes="Bold"
                    HeightRequest="55"
                    CornerRadius="12"
                    HorizontalOptions="Fill" />

                <Button
                    Text="Receita 2"
                    Clicked="OnRecipe2Clicked"
                    IsEnabled="{Binding CanInteract}"
                    BackgroundColor="{StaticResource Primary}"
                    TextColor="White"
                    FontSize="16"
                    FontAttributes="Bold"
                    HeightRequest="55"
                    CornerRadius="12"
                    HorizontalOptions="Fill" />

                <Button
                    Text="Receita 3"
                    Clicked="OnRecipe3Clicked"
                    IsEnabled="{Binding CanInteract}"
                    BackgroundColor="{StaticResource Primary}"
                    TextColor="White"
                    FontSize="16"
                    FontAttributes="Bold"
                    HeightRequest="55"
                    CornerRadius="12"
                    HorizontalOptions="Fill" />

                <Button
                    Text="Receita 4"
                    Clicked="OnRecipe4Clicked"
                    IsEnabled="{Binding CanInteract}"
                    BackgroundColor="{StaticResource Primary}"
                    TextColor="White"
                    FontSize="16"
                    FontAttributes="Bold"
                    HeightRequest="55"
                    CornerRadius="12"
                    HorizontalOptions="Fill" />

                <Button
                    Text="Receita 5"
                    Clicked="OnRecipe5Clicked"
                    IsEnabled="{Binding CanInteract}"
                    BackgroundColor="{StaticResource Primary}"
                    TextColor="White"
                    FontSize="16"
                    FontAttributes="Bold"
                    HeightRequest="55"
                    CornerRadius="12"
                    HorizontalOptions="Fill" />
            </VerticalStackLayout>

            <!-- Informações -->
            <Border
                Stroke="{StaticResource Gray300}"
                StrokeThickness="1"
                Background="{StaticResource Gray100}"
                Padding="15"
                StrokeShape="RoundRectangle 10"
                HorizontalOptions="Fill"
                Margin="0,20,0,0">
                <VerticalStackLayout Spacing="8">
                    <Label
                        Text="ℹ️ Informações"
                        FontSize="12"
                        FontAttributes="Bold"
                        TextColor="{StaticResource Primary}" />
                    <Label
                        Text="• Status muda automaticamente ao conectar/desconectar"
                        FontSize="11"
                        TextColor="{StaticResource Gray600}" />
                    <Label
                        Text="• Valor é atualizado em tempo real via Observable"
                        FontSize="11"
                        TextColor="{StaticResource Gray600}" />
                    <Label
                        Text="• Receitas escrevem valores nos endereços configurados"
                        FontSize="11"
                        TextColor="{StaticResource Gray600}" />
                    <Label
                        Text="• Configure endereços no arquivo PlcAddresses.cs"
                        FontSize="11"
                        TextColor="{StaticResource Gray600}" />
                </VerticalStackLayout>
            </Border>

            <!-- Loading Indicator -->
            <ActivityIndicator
                IsVisible="{Binding IsProcessing}"
                IsRunning="{Binding IsProcessing}"
                Color="{StaticResource Primary}"
                HeightRequest="40" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
