<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UAUIngleza_plc.MainPage"
             Shell.FlyoutBehavior="Flyout"
             Title="UAU Ingleza">

    <Grid ColumnSpacing="0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <!-- WebView da Câmera (80%) -->
        <Border Grid.Column="0"
                StrokeThickness="0">
            <WebView x:Name="CameraWebView"
                     HorizontalOptions="FillAndExpand"
                     VerticalOptions="FillAndExpand"
                     BackgroundColor="Black" />
        </Border>

        <!-- Menu Lateral -->
        <Border Grid.Column="1"
                Background="#1a1a1a"
                StrokeThickness="2"
                Stroke="#2a2a2a">
            
            <ScrollView Padding="10" VerticalScrollBarVisibility="Never">
                <VerticalStackLayout Spacing="10">
                    
                    <!-- Título Receitas -->
                    <Label Text="RECEITAS"
                           FontSize="11"
                           FontAttributes="Bold"
                           TextColor="#888888"
                           HorizontalOptions="Center"
                           Margin="0,5,0,0" />

                    <!-- Grid de Receitas (2 colunas) -->
                    <Grid ColumnSpacing="8" RowSpacing="8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Button Grid.Column="0" Grid.Row="0"
                                x:Name="Recipe1Name"
                                Command="{Binding ChangeRecipe}"
                                CommandParameter="2"
                                BackgroundColor="{StaticResource Primary}"
                                TextColor="White"
                                FontSize="12"
                                FontAttributes="Bold"
                                HeightRequest="50"
                                CornerRadius="8">
                            <Button.Shadow>
                                <Shadow Brush="{StaticResource Primary}"
                                        Radius="6"
                                        Opacity="0.4" />
                            </Button.Shadow>
                        </Button>

                        <Button Grid.Column="1" Grid.Row="0"
                                x:Name="Recipe2Name"
                                Command="{Binding ChangeRecipe}"
                                CommandParameter="2"
                                BackgroundColor="{StaticResource Primary}"
                                TextColor="White"
                                FontSize="12"
                                FontAttributes="Bold"
                                HeightRequest="50"
                                CornerRadius="8">
                            <Button.Shadow>
                                <Shadow Brush="{StaticResource Primary}"
                                        Radius="6"
                                        Opacity="0.4" />
                            </Button.Shadow>
                        </Button>

                        <Button Grid.Column="0" Grid.Row="1"
                                x:Name="Recipe3Name"
                                Command="{Binding ChangeRecipe}"
                                CommandParameter="3"
                                BackgroundColor="{StaticResource Primary}"
                                TextColor="White"
                                FontSize="12"
                                FontAttributes="Bold"
                                HeightRequest="50"
                                CornerRadius="8">
                            <Button.Shadow>
                                <Shadow Brush="{StaticResource Primary}"
                                        Radius="6"
                                        Opacity="0.4" />
                            </Button.Shadow>
                        </Button>

                        <Button Grid.Column="1" Grid.Row="1"
                                x:Name="Recipe4Name"
                                Command="{Binding ChangeRecipe}"
                                CommandParameter="4"
                                BackgroundColor="{StaticResource Primary}"
                                TextColor="White"
                                FontSize="12"
                                FontAttributes="Bold"
                                HeightRequest="50"
                                CornerRadius="8">
                            <Button.Shadow>
                                <Shadow Brush="{StaticResource Primary}"
                                        Radius="6"
                                        Opacity="0.4" />
                            </Button.Shadow>
                        </Button>

                        <Button Grid.Column="0" Grid.Row="2"
                                x:Name="Recipe5Name"
                                Command="{Binding ChangeRecipe}"
                                CommandParameter="5"
                                BackgroundColor="{StaticResource Primary}"
                                TextColor="White"
                                FontSize="12"
                                FontAttributes="Bold"
                                HeightRequest="50"
                                CornerRadius="8">
                            <Button.Shadow>
                                <Shadow Brush="{StaticResource Primary}"
                                        Radius="6"
                                        Opacity="0.4" />
                            </Button.Shadow>
                        </Button>

                        <Button Grid.Column="1" Grid.Row="2"
                                x:Name="Recipe6Name"
                                Command="{Binding ChangeRecipe}"
                                CommandParameter="6"
                                BackgroundColor="{StaticResource Primary}"
                                TextColor="White"
                                FontSize="12"
                                FontAttributes="Bold"
                                HeightRequest="50"
                                CornerRadius="8">
                            <Button.Shadow>
                                <Shadow Brush="{StaticResource Primary}"
                                        Radius="6"
                                        Opacity="0.4" />
                            </Button.Shadow>
                        </Button>

                        <Button Grid.Column="0" Grid.Row="3"
                                x:Name="Recipe7Name"
                                Command="{Binding ChangeRecipe}"
                                CommandParameter="7"
                                BackgroundColor="{StaticResource Primary}"
                                TextColor="White"
                                FontSize="12"
                                FontAttributes="Bold"
                                HeightRequest="50"
                                CornerRadius="8">
                            <Button.Shadow>
                                <Shadow Brush="{StaticResource Primary}"
                                        Radius="6"
                                        Opacity="0.4" />
                            </Button.Shadow>
                        </Button>

                        <Button Grid.Column="1" Grid.Row="3"
                                x:Name="Recipe8Name"
                                Command="{Binding ChangeRecipe}"
                                CommandParameter="8"
                                BackgroundColor="{StaticResource Primary}"
                                TextColor="White"
                                FontSize="12"
                                FontAttributes="Bold"
                                HeightRequest="50"
                                CornerRadius="8">
                            <Button.Shadow>
                                <Shadow Brush="{StaticResource Primary}"
                                        Radius="6"
                                        Opacity="0.4" />
                            </Button.Shadow>
                        </Button>

                        <Button Grid.Column="0" Grid.Row="4"
                                x:Name="Recipe9Name"
                                Command="{Binding ChangeRecipe}"
                                CommandParameter="9"
                                BackgroundColor="{StaticResource Primary}"
                                TextColor="White"
                                FontSize="12"
                                FontAttributes="Bold"
                                HeightRequest="50"
                                CornerRadius="8">
                            <Button.Shadow>
                                <Shadow Brush="{StaticResource Primary}"
                                        Radius="6"
                                        Opacity="0.4" />
                            </Button.Shadow>
                        </Button>

                        <Button Grid.Column="1" Grid.Row="4"
                                x:Name="Recipe10Name"
                                Command="{Binding ChangeRecipe}"
                                CommandParameter="10"
                                BackgroundColor="{StaticResource Primary}"
                                TextColor="White"
                                FontSize="12"
                                FontAttributes="Bold"
                                HeightRequest="50"
                                CornerRadius="8">
                            <Button.Shadow>
                                <Shadow Brush="{StaticResource Primary}"
                                        Radius="6"
                                        Opacity="0.4" />
                            </Button.Shadow>
                        </Button>

                    </Grid>

                    <!-- Divisor -->
                    <BoxView HeightRequest="1"
                             Color="#3a3a3a"
                             HorizontalOptions="Fill"
                             Margin="0,5,0,5" />

                    <!-- Status de Conexão -->
                    <Border Background="#2a2a2a"
                            Padding="8"
                            StrokeThickness="1"
                            Stroke="#3a3a3a"
                            StrokeShape="RoundRectangle 8">
                        <Grid ColumnSpacing="8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0"
                                    WidthRequest="16"
                                    HeightRequest="16"
                                    StrokeThickness="2"
                                    Stroke="{Binding IsConnected, Converter={StaticResource BoolToColorConverter}}"
                                    StrokeShape="RoundRectangle 8"
                                    Background="{Binding IsConnected, Converter={StaticResource BoolToColorConverter}}"
                                    VerticalOptions="Center">
                                <Border.Shadow>
                                    <Shadow Brush="{Binding IsConnected, Converter={StaticResource BoolToColorConverter}}"
                                            Radius="8"
                                            Opacity="0.8" />
                                </Border.Shadow>
                            </Border>

                            <Label Grid.Column="1"
                                   Text="{Binding IsConnected, Converter={StaticResource BoolToStatusTextConverter}}"
                                   FontSize="10"
                                   FontAttributes="Bold"
                                   TextColor="{Binding IsConnected, Converter={StaticResource BoolToColorConverter}}"
                                   VerticalOptions="Center" />
                        </Grid>
                    </Border>

                    <!-- Receita Ativa -->
                    <Border Background="#2a2a2a"
                            Padding="10"
                            StrokeThickness="1"
                            Stroke="#3a3a3a"
                            StrokeShape="RoundRectangle 8">
                        <VerticalStackLayout Spacing="4">
                            <Label Text="RECEITA ATIVA"
                                   FontSize="9"
                                   FontAttributes="Bold"
                                   TextColor="#888888"
                                   HorizontalOptions="Center" />

                            <Label Text="{Binding RecipeValue}"
                                   FontSize="26"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"
                                   TextColor="{StaticResource Primary}" />
                        </VerticalStackLayout>
                    </Border>

                    <!-- Grid de Contadores -->
                    <Grid ColumnSpacing="8" RowSpacing="8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!-- Caixas Boas -->
                        <Border Grid.Column="0" Grid.Row="0"
                                Background="#2a2a2a"
                                Padding="8"
                                StrokeThickness="1"
                                Stroke="#3a3a3a"
                                StrokeShape="RoundRectangle 8">
                            <VerticalStackLayout Spacing="3">
                                <Label Text="CAIXAS BOAS"
                                       FontSize="8"
                                       FontAttributes="Bold"
                                       TextColor="#888888"
                                       HorizontalOptions="Center" />

                                <Label Text="0"
                                       FontSize="20"
                                       FontAttributes="Bold"
                                       HorizontalOptions="Center"
                                       TextColor="#4CAF50" />
                            </VerticalStackLayout>
                        </Border>

                        <!-- Caixas Ruins -->
                        <Border Grid.Column="1" Grid.Row="0"
                                Background="#2a2a2a"
                                Padding="8"
                                StrokeThickness="1"
                                Stroke="#3a3a3a"
                                StrokeShape="RoundRectangle 8">
                            <VerticalStackLayout Spacing="3">
                                <Label Text="CAIXAS RUINS"
                                       FontSize="8"
                                       FontAttributes="Bold"
                                       TextColor="#888888"
                                       HorizontalOptions="Center" />

                                <Label Text="0"
                                       FontSize="20"
                                       FontAttributes="Bold"
                                       HorizontalOptions="Center"
                                       TextColor="#F44336" />
                            </VerticalStackLayout>
                        </Border>

                        <!-- Total de Caixas -->
                        <Border Grid.Column="0" Grid.Row="1"
                                Grid.ColumnSpan="2"
                                Background="#2a2a2a"
                                Padding="10"
                                StrokeThickness="1"
                                Stroke="#3a3a3a"
                                StrokeShape="RoundRectangle 8">
                            <VerticalStackLayout Spacing="3">
                                <Label Text="TOTAL DE CAIXAS"
                                       FontSize="9"
                                       FontAttributes="Bold"
                                       TextColor="#888888"
                                       HorizontalOptions="Center" />

                                <Label Text="0"
                                       FontSize="22"
                                       FontAttributes="Bold"
                                       HorizontalOptions="Center"
                                       TextColor="{StaticResource Primary}" />
                            </VerticalStackLayout>
                        </Border>
                    </Grid>

                    <Button Text="RESETAR CONTADOR"
                            BackgroundColor="#2a2a2a"
                            TextColor="#FF9800"
                            FontSize="11"
                            FontAttributes="Bold"
                            HeightRequest="45"
                            CornerRadius="8"
                            BorderWidth="1"
                            BorderColor="#3a3a3a"
                            Margin="0,0,0,45" />
                </VerticalStackLayout>
            </ScrollView>
        </Border>
    </Grid>

</ContentPage>
