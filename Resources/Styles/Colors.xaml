<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Note: For Android please see also Platforms\Android\Resources\values\colors.xml -->

    <!-- Dark Theme Colors -->
    <Color x:Key="Primary">#1E88E5</Color>
    <Color x:Key="PrimaryDark">#1565C0</Color>
    <Color x:Key="PrimaryLight">#42A5F5</Color>
    <Color x:Key="PrimaryDarkText">#FFFFFF</Color>
    
    <Color x:Key="Secondary">#26A69A</Color>
    <Color x:Key="SecondaryDark">#00897B</Color>
    <Color x:Key="SecondaryLight">#4DB6AC</Color>
    
    <Color x:Key="Tertiary">#66BB6A</Color>
    <Color x:Key="TertiaryDark">#43A047</Color>
    
    <Color x:Key="Success">#4CAF50</Color>
    <Color x:Key="Warning">#FFA726</Color>
    <Color x:Key="Danger">#EF5350</Color>
    <Color x:Key="Info">#29B6F6</Color>
    
    <!-- Dark Background Colors -->
    <Color x:Key="Background">#121212</Color>
    <Color x:Key="BackgroundLight">#1E1E1E</Color>
    <Color x:Key="Surface">#1E1E1E</Color>
    <Color x:Key="SurfaceVariant">#2C2C2C</Color>
    <Color x:Key="CardBackground">#242424</Color>
    
    <!-- Text Colors for Dark Theme -->
    <Color x:Key="TextPrimary">#FFFFFF</Color>
    <Color x:Key="TextSecondary">#B0B0B0</Color>
    <Color x:Key="TextDisabled">#757575</Color>
    
    <!-- Legacy Colors (kept for compatibility) -->
    <Color x:Key="White">#FFFFFF</Color>
    <Color x:Key="Black">#000000</Color>
    <Color x:Key="Magenta">#66BB6A</Color>
    <Color x:Key="MidnightBlue">#1565C0</Color>
    <Color x:Key="OffBlack">#0D0D0D</Color>

    <!-- Gray Scale (adjusted for dark theme) -->
    <Color x:Key="Gray100">#2C2C2C</Color>
    <Color x:Key="Gray200">#383838</Color>
    <Color x:Key="Gray300">#4A4A4A</Color>
    <Color x:Key="Gray400">#6E6E6E</Color>
    <Color x:Key="Gray500">#919191</Color>
    <Color x:Key="Gray600">#B0B0B0</Color>
    <Color x:Key="Gray700">#CFCFCF</Color>
    <Color x:Key="Gray800">#E0E0E0</Color>
    <Color x:Key="Gray900">#FFFFFF</Color>
    <Color x:Key="Gray950">#FFFFFF</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource Secondary}"/>
    <SolidColorBrush x:Key="TertiaryBrush" Color="{StaticResource Tertiary}"/>
    <SolidColorBrush x:Key="WhiteBrush" Color="{StaticResource White}"/>
    <SolidColorBrush x:Key="BlackBrush" Color="{StaticResource Black}"/>
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource Background}"/>

    <SolidColorBrush x:Key="Gray100Brush" Color="{StaticResource Gray100}"/>
    <SolidColorBrush x:Key="Gray200Brush" Color="{StaticResource Gray200}"/>
    <SolidColorBrush x:Key="Gray300Brush" Color="{StaticResource Gray300}"/>
    <SolidColorBrush x:Key="Gray400Brush" Color="{StaticResource Gray400}"/>
    <SolidColorBrush x:Key="Gray500Brush" Color="{StaticResource Gray500}"/>
    <SolidColorBrush x:Key="Gray600Brush" Color="{StaticResource Gray600}"/>
    <SolidColorBrush x:Key="Gray700Brush" Color="{StaticResource Gray700}"/>
    <SolidColorBrush x:Key="Gray800Brush" Color="{StaticResource Gray800}"/>
    <SolidColorBrush x:Key="Gray900Brush" Color="{StaticResource Gray900}"/>
    <SolidColorBrush x:Key="Gray950Brush" Color="{StaticResource Gray950}"/>
</ResourceDictionary>